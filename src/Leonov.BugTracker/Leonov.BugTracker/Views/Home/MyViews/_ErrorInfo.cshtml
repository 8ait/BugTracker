@{
    Layout = null;
}

<table class="table table-striped" style="text-align: center;">
    <thead style="background-color: chocolate; color: white">
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Дата создания</th>
            <th scope="col">Область возникновения</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="errors">
    </tbody>
</table>
<div class="row" style="text-align: center">
    <div class="col-8">
        <div class="input-group" style="width: 60%; margin: auto">
            <input type="number" class="form-control" id="errorPage">
            <div class="input-group-append">
                <span class="input-group-text" id="infoErrorPage">1 из 25</span>
                <button class="btn btn-success" type="button" id="errorGo">Перейти</button>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="row">
            <label class="col-6 col-form-label"><strong>Кол-во:</strong></label>
            <div class="col-6">
                <select name="count" id="errorCount" class="form-control" onchange="changeOption()">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/error.js"></script>
<script>
    $(document).ready(function (e) {

        getErrorTableAjax(1, 5);

        errorGo.onclick = function() {
            var count = $('#errorCount').val();
            var page = $('#errorPage').val();
            getErrorTableAjax(page, count);
        }
    });

    function changeOption() {
        var count = $('#errorCount').val();
        getErrorTableAjax(1, count);
    }
</script>
