<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/user.css" />
</head>
<body>
    <div style="position: absolute; top: 100px; right: 15px; width: 400px; z-index: 50">
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="success-alert">
            <strong>Ошибка авторизации:</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
<header class="border-bottom-header" style="background-color: chocolate">
    <nav class="navbar navbar-expand">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><strong>Главная</strong></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Project" asp-action="Index"><strong>Проекты</strong></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index"><strong>Пользователи</strong></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><strong>Ошибки</strong></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><strong>Аудиты</strong></a>
            </li>
        </ul>
        <div class="container-right">
            <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="SignOut"><strong>Выход</strong></a>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top-footer footer" style="text-align: center">
    <div class="container">
        &copy; 2020 - Баг трекер
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function () { 
        $("#success-alert").hide();
    });
</script>
@RenderSection("Scripts", required: false)
</body>
</html>
