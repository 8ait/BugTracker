@{
    Layout = null;
}
<table class="table table-striped" style="text-align: center;">
    <thead style="background-color: chocolate; color: white">
        <tr>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Дата начала работы</th>
            <th scope="col"><a class="btn btn-success" data-toggle="modal" data-target="#addUserModalCenter" id="addDeveloper">Добавить &#128187;</a></th>
        </tr>
    </thead>
    <tbody id="projectDevelopers">
    </tbody>
</table>
<div class="row" style="text-align: center">
    <div class="col-8">
        <div class="input-group" style="width: 60%; margin: auto">
            <input type="number" class="form-control" id="projectDeveloperPage">
            <div class="input-group-append">
                <span class="input-group-text" id="infoProjectDeveloperPage">1 из 25</span>
                <button class="btn btn-success" type="button" id="projectDeveloperGo">Перейти</button>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="row">
            <label class="col-6 col-form-label"><strong>Кол-во:</strong></label>
            <div class="col-6">
                <select name="count" id="projectDeveloperCount" class="form-control" onchange="changeProjectDeveloperOption()">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/user.js"></script>
<script>
    $(document).ready(function(e) {

        var id = $('#projectId').val();
        var count = $('#projectDeveloperCount').val();

        getProjectUserTableAjax(1, count, id, 3);
        getUsersByUserTypeAjax(3, id);

        projectDeveloperGo.onclick = function() {
            var count = $('#projectDeveloperCount').val();
            var page = $('#projectDeveloperPage').val();
            getProjectUserTableAjax(page, count, id, 3);
        }

        addDeveloper.onclick = function() {
            getUsersByUserTypeAjax(3, id);
        }
    });

    function changeProjectDeveloperOption() {
        var id = $('#projectId').val();
        var count = $('#projectDeveloperCount').val();
        getProjectUserTableAjax(1, count, id, 3);
    }

    function setDeveloperNameToDelete(name) {
        $('#developerName').text(name);
    }
</script>
