<div class="row">
    <div class="info-mini" style="text-align: center; width: 90%; border: burlywood solid 5px; padding: 25px; margin: auto; margin-top: 10px;">
        <h2 style="margin: auto">@Model.Name</h2>
    </div>
</div>
<div class="info-mini" style="margin: auto; margin-top: 15px; width: 90%; border: burlywood solid 5px;">
    <textarea disabled="disabled" name="about" style="resize: none; width: 100%; height: 200px;">@Model.About</textarea>
</div>
<div style="margin: auto; padding: 20px; width: 350px;">
    <a style="color: white; width: 100%" class="btn btn-success" href="/Project/EditIndex?id=@Model.Id">Редактировать информацию &#9998;</a>
    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteProjectModalCenter" style="color: white; width: 100%; margin-top: 10px">Удалить проект</button>
</div>

<div class="modal fade" id="deleteProjectModalCenter" tabindex="-1" role="dialog" aria-labelledby="deleteProjectModalCenter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Подтвреждение удаления</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Удалить проект "@Model.Name"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-danger" id="deleteProjectBut">Удалить</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/project.js"></script>
<script>
    $(document).ready(function (e) {

        deleteProjectBut.onclick = function () {
            var id = $('#projectId').val();
            deleteProjectAjax(id);
        }
    });
</script>
