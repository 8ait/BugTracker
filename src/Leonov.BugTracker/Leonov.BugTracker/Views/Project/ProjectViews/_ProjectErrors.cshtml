@{
    Layout = null;
}

<table class="table table-striped" style="text-align: center;">
    <thead style="background-color: chocolate; color: white">
    <tr>
        <th scope="col">Название</th>
        <th scope="col">Дата создания</th>
        <th scope="col">Область возникновения</th>
        <th scope="col"><a class="btn btn-success" href="/Error/Create">Создать &#128030;</a></th>
    </tr>
    </thead>
    <tbody id="projectErrors">
    </tbody>
</table>
<div class="row" style="text-align: center">
    <div class="col-8">
        <div class="input-group" style="width: 60%; margin: auto">
            <input type="number" class="form-control" id="projectErrorPage">
            <div class="input-group-append">
                <span class="input-group-text" id="infoProjectErrorPage">1 из 25</span>
                <button class="btn btn-success" type="button" id="projectErrorGo">Перейти</button>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="row">
            <label class="col-6 col-form-label"><strong>Кол-во:</strong></label>
            <div class="col-6">
                <select name="count" id="projectErrorCount" class="form-control" onchange="changeProjectErrorOption()">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/error.js"></script>
<script>
    $(document).ready(function (e) {

        var id = $('#projectId').val();

        getProjectErrorTableAjax(1, 5, id);

        projectErrorGo.onclick = function() {
            var count = $('#projectErrorCount').val();
            var page = $('#projectErrorPage').val();
            getProjectErrorTableAjax(page, count, id);
        }
    });

    function changeProjectErrorOption() {
        var id = $('#projectId').val();
        var count = $('#projectErrorCount').val();
        getProjectErrorTableAjax(1, count, id);
    }
</script>
