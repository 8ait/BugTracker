@{
    ViewData["Title"] = "Авторизация";
    Layout = "_AuthLayout";
}
<div class="centered">
    <div class="header-auth">
        Авторизация
    </div>
    <form style="width: 80%; margin: auto; margin-top: 40px;">
        <div class="form-group row">
            <label for="inputLogin" class="col-3 col-form-label">Логин:</label>
            <div class="col-9">
                <input type="text" class="form-control" id="inputLogin" placeholder="Введите логин">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-3 col-form-label">Пароль</label>
            <div class="col-9">
                <input type="password" class="form-control" id="inputPassword" placeholder="Введите пароль">
            </div>
        </div>
        <div style="padding-top: 25px; margin: auto; width: 40%">
            <button type="submit" class="btn btn-success" style="width: 100%">Войти</button>
        </div>
    </form>
</div>

